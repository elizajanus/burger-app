<div class="jumbotron" id="eat-a-burger">
  <h1>Eat A Burger</h1>
  <img src="https://pre00.deviantart.net/5aef/th/pre/i/2009/217/1/5/cartoon_burger_by_viperfan91.jpg" height="75" width="75">
</div>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-4">
  <h2>Burgers To Eat</h2>

    <ul>
      {{#each burgers}}
        {{#unless eaten}}
          {{> burgers/burger-block eaten=0}}
        {{/unless}}
      {{/each}}
    </ul>
</div>

<div class="col-md-4">
    <h2>Add a Burger</h2>
      <form class="create-form">

          <div class="form-group">
          <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>

<div class="col-md-4">
<h2>Burgers Eaten</h2>

<ul>
  {{#each burgers}}
    {{#if eaten}}
      {{> burgers/burger-block eaten=1}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
</div>

